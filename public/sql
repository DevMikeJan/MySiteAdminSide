CREATE TABLE USER_INFO (
	USER_ID VARCHAR(255) NOT NULL,
    FNAME VARCHAR(255),
    MNAME VARCHAR(255),
    LNAME VARCHAR(255),
    AGE INT,
    GENDER VARCHAR(255),
    ADDRESS VARCHAR(255),
    PRIMARY KEY(USER_ID)
);

CREATE TABLE USER_LOGIN_CREDENTIALS (
	AUTO_NO BIGINT AUTO_INCREMENT NOT NULL,
   	USER_ID VARCHAR(255),
    EMAIL VARCHAR(255),
    UNAME VARCHAR(255),
    UPASS VARCHAR(255),
    ACTIVE BOOLEAN,
    USER_ACCESS INT,
    PRIMARY KEY(AUTO_NO),
    FOREIGN KEY (USER_ID) REFERENCES USER_INFO(USER_ID)
)

CREATE TABLE BANNER_IMG (
	BAUTO_NO INT NOT NULL,
    BFILE_NAME VARCHAR(255),
    PRIMARY KEY(BAUTO_NO)
)

CREATE TABLE ASSETS_UPLOAD (
	ASSETFILE_ID INT NOT NULL,
    ASSET_NAME VARCHAR(255),
    ASSET_DESC VARCHAR(255),
    ASSET_FILE_NAME VARCHAR(255),
    ASSET_RAR_FILE_EXT VARCHAR(255),
    ASSET_IMG_FILE_EXT VARCHAR(255),
    ASSET_RAR_RAN_NUM VARCHAR(255) NOT NULL,
    ASSET_IMG_RAN_NUM VARCHAR(255) NOT NULL,
    PRIMARY KEY(ASSETFILE_ID)
);